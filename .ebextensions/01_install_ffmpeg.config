files:
    "/etc/yum.repos.d/ffmpeg.repo":
        mode: "000644"
        owner: root
        group: root
        content: |
            [ffmpeg]
            name=ffmpeg
            baseurl=http://li.nux.ro/download/nux/dextop/el7/$basearch/
            enabled=1
            gpgcheck=0

container_commands:
  01_update:
    command: "sudo yum update -y"
  02_install_ffmpeg:
    command: "sudo yum install -y ffmpeg"
    # Note: If your Beanstalk uses Amazon Linux 2 (AL2), the yum commands might need adjustment, 
    # but this is a common approach for FFmpeg installation.
